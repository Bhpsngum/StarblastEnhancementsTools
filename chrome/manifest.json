{
	"manifest_version": 2,
	"name": "Starblast Enhancement Tools",
	"short_name": "Starblast E.T",
	"version": "1.0",
	"author": "Bhpsngum",
	"description": "An useful and great extension that provides tools for Modding and Ship Editing, also improving Starblast experience",
  "content_scripts": [
	{
		"matches": [
			"https://starblast.io/*",
			"https://dankdmitron.github.io/*",
			"https://starblast.data.neuronality.com/modding/moddingcontent.html"
		],
		"all_frames":true,
		"js":[
			"/js/main/root/algorithm.js",
			"/js/main/root/decoration.js"
		]
	}],
	"background":
	{
		"scripts": ["/js/background/main/background.js"],
		"persistent":false
	},
	"options_page": "/html/options/options.html",
	"permissions": ["declarativeContent","activeTab"],
	"web_accessible_resources":[
		"/js/*.js",
		"/html/tools/*.html"
	],
	"commands":
	{
		"main_options":
		{
			"suggested_key":
			{
				"default":"Ctrl+Shift+S",
				"mac": "Command+Shift+S"
			},
			"description": "Open in-game options"
		}
	},
	"page_action":
	{
		"default_icon":"/icons/main/icon.png",
		"default_popup": "/html/popup/popup.html"
	}
}
